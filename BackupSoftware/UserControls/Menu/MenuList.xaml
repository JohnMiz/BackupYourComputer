<UserControl x:Class="BackupSoftware.MenuList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BackupSoftware"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
     <Grid Background="{StaticResource DarkBlueBrush}" d:DataContext="{x:Static local:MenuListViewModel.Instance}">
          <ItemsControl ItemsSource="{Binding Items}" Margin="0 80 0 0">
               <ItemsControl.ItemTemplate>
                    <DataTemplate>

                         <local:MenuItemControl />

                    </DataTemplate>
               </ItemsControl.ItemTemplate>
          </ItemsControl>
     </Grid>
</UserControl>
