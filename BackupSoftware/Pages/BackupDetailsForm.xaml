          <!--<Button Grid.Row="2" Style="{StaticResource BackupFolderButton}"/>-->
          <Border Grid.Row="2"  Background="#dcdde1" Height="50">
               <Grid>
                    <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="4*" />
                         <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--<TextBlock Grid.Column="0"  Text="Here will be logger..." FontSize="20" />-->
                    <ProgressBar Height="20" Margin="30 0 0 0" Width="Auto"/>
                    <Button Grid.Column="1" 
                       HorizontalAlignment="right"
                       Content="Start Backup" Width="75"
                       Margin="0 0 10 0"
                       Command="{Binding StartBackupCommand}" />
               </Grid>
          </Border>
     </Grid>
</Page>
